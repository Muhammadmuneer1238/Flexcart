<body>
  <main class="main">
    <div
      class="page-header text-center"
      style="background-image: url('assets/images/page-header-bg.jpg')"
    >
      <div class="container">
        <h1 class="page-title">Whishlist items<span>Shop</span></h1>
      </div>
    </div>
    <nav aria-label="breadcrumb" class="breadcrumb-nav">
      <div class="container">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item"><a href="/login">Shop</a></li>
          <li class="breadcrumb-item active" aria-current="page">
            Whishlist items
          </li>
        </ol>
      </div>
    </nav>
    <div class="page-content">
      <div class="cart">
        <div class="container">
          <div class="row">
            <div class="col-lg-12">
              <table class="table table-cart table-mobile">
                <thead>
                  <tr>
                    <th>Product</th>
                    <th>Price</th>
                    <th></th>
                  </tr>
                </thead>

                <tbody>
                  <%data.forEach(function(datas){%>

                  <tr>
                    <td class="product-col">
                      <div class="product">
                        <figure class="product-media">
                          <a href="#">
                            <img
                              src="/images/<%=datas.productId.images[0]%>"
                              alt="Product image"
                            />
                          </a>
                        </figure>

                        <h3 class="product-title">
                          <a href=""><%=datas.productId.productname%></a>
                        </h3>
                        <!-- End .product-title -->
                      </div>
                      <!-- End .product -->
                    </td>
                    <td class="price-col"><%=datas.productId.price%></td>
                    <td class="quantity-col">
                      <!-- End .cart-product-quantity -->
                    </td>
                    <td class="total-col text-success">In Stock</td>

                    <td class="cart-col">
                      <button 
                        class="btn btn-success"
                        onclick="cartProd('<%=datas.productId._id%>')"
                      >
                        Add to Cart
                      </button>
                    </td>
                    <td class="remove-col">
                      <button
                        class="btn-remove"
                        onclick="delwishPro('<%=datas.productId._id%>')"
                      >
                        <i class="icon-close"></i>
                      </button>
                    </td>
                  </tr>
                  <%})%>
                </tbody>
              </table>
              <!-- End .table table-wishlist -->

              <div class="cart-bottom">
                
                <!-- End .cart-discount -->
                <a
                href="/"
                class="btn btn-outline-dark-2 btn-block mb-3"
                ><span>CONTINUE SHOPPING</span><i class="icon-refresh"></i
              ></a>
                
              </div>
              <!-- End .cart-bottom -->
            </div>
            <!-- End .col-lg-9 -->

            <!-- End .summary -->

            
            <!-- End .col-lg-3 -->
          </div>
          <!-- End .row -->
        </div>
        <!-- End .container -->
      </div>
      <!-- Ennd .cart -->
    </div>
    <!-- End .page-content -->
  </main>
  <!-- End .main -->
</body>
<script>
  function delwishPro(id) {
    console.log("iddddd", id);
    $.ajax({
      url: "/deleteWish",
      data: {
        id: id,
      },
      method: "post",
      success: (response) => {
        location.reload();
      },
    });
  }
  function cartProd(id) {
    $.ajax({
      url: "/cartPro",
      data: {
        productId: id,
      },
      method: "post",
      success: (response) => {
        Toastify({
          text: "Item added to cart",
          duration: 3000,
          gravity: "bottom",
          position: "center",
          style: {
            background: "#000000",
          },
        }).showToast();
      },
    });
  }
</script>
